{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "PakeDist",
    "version": "../package.json",
    "identifier": "com.pakeplus.app",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "windows": [
            {
                "title": "PakePlus",
                "width": 920,
                "height": 680
            }
        ],
        "security": {
            "assetProtocol": {
                "enable": true,
                "scope": {
                    "allow": [
                        "$APPDATA/assets/**",
                        "$APPDATA/**",
                        "$DOWNLOAD/*"
                    ]
                }
            },
            "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost blob: data: http://asset.localhost; font-src 'self' asset: http//localhost data:;"
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "resources": ["./data/*"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
